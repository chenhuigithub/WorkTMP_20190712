<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="false"
    android:padding="@dimen/dp_006"
    tools:context=".aty.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_wrapper_title_layout_fg_v_work_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:padding="@dimen/dp_006">


        <ImageView
            android:id="@+id/iv_logo_layout_v_work_item"
            android:layout_width="@dimen/dp_015"
            android:layout_height="@dimen/dp_015"
            android:background="@drawable/ic_launcher"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/ll_wrapper_02_layout_v_work_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_005"
                android:layout_height="@dimen/dp_007"
                android:background="@drawable/arrow_right"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_004"
                android:text="题数：15"
                android:textColor="@color/color_text_content"
                android:textSize="@dimen/sp_006" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_wrapper_01_layout_v_work_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_006"
            android:layout_marginRight="@dimen/dp_006"
            android:layout_toLeftOf="@id/ll_wrapper_02_layout_v_work_item"
            android:layout_toRightOf="@id/iv_logo_layout_v_work_item"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6月10日数学暑假作业"
                android:textColor="@color/color_text_content"
                android:textSize="@dimen/sp_008" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_004"
                android:text="6月08日10:00 ~ 6月10日22:00"
                android:textColor="@color/color_text_content"
                android:textSize="@dimen/sp_006" />
        </LinearLayout>
    </RelativeLayout>

    <com.example.worktmp.view.CustomExpandListView
        android:id="@+id/lv_content_layout_v_work_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_wrapper_title_layout_fg_v_work_item"
        android:cacheColorHint="#00000000"
        android:divider="@color/bg02"
        android:dividerHeight="@dimen/dp_001"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:listSelector="#00000000" />
</RelativeLayout>